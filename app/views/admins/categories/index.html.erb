<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <%= form_for @category, url:admins_categories_path do |f| %>
      <div class="field row">
        <%= f.label :カテゴリー %>
        <%= f.text_field :name %>
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
      <% end %>
      <table>
        <thead>
          <tr>
            <th>カテゴリー名</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category|%>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集する", edit_admins_category_path(category.id) ,class: "btn btn-primary"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>