<h1>Admins::Allergies#index</h1>
<p>Find me in app/views/admins/allergies/index.html.erb</p>

    <%= form_for @allergy, url:admins_allergies_path do |f| %>
      <div class="field row">
        <%= f.label :アレルギー %>
        <%= f.text_field :name %>
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
    <% end %>

  <% @allergies.each do |allergy|%>
    <tr>
      <td><%= allergy.name %></td>
      <td><%= link_to "編集する", edit_admins_allergy_path(allergy.id) ,class: "btn btn-primary"%></td>
    </tr>
  <% end %>