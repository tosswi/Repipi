<h1>通知一覧</h1>
  <%= link_to '全て削除する', notifications_destroy_all_path, class: 'btn-sm btn-danger', method: :delete,data: {confirm: '通知を全て削除しますか？'} %>
<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
      <% if @notifications.exists? %>
        <%= render @notifications %>
        <%= paginate @notifications %>
      <% else %>
        <p> 通知はありません</p>
      <% end %>
    </div>
  </div>
</div>