<div class="container">
  <h3>フォロワー一覧</h3>
  <div class="row">
    <div align="center">
      <div class="col-xs-8">
        <table class="table">
          <thead>
            <tr>
              <th>プロフィール画像</th>
              <th>名前</th>
              <th>投稿数</th>
            </tr>
          </thead>
          <tbody>
            <% @user.followers.where.not(id: @user.id).each do |user| %>
            <tr>
              <td><%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :image, size: '100x100',format: "jpeg", fallback: "no_image.jpg" %>
                <% end %></td>
              <td><%= link_to user_path(user) do %><%= user.name%>さん
                <% end %></td>
              <td><%= user.recipes.count %>記事投稿</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>