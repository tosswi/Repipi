<!DOCTYPE html>
<html>
  <head>
    <title>Repipi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c8c5fed458.js" crossorigin="anonymous"></script>
  </head>



  <body>
    <% if admin_signed_in? %>

      <header class="navbar navbar-fixed-top">
            <nav>
                <ul class="nav navbar-nav navbar-right">

                    <li><%= link_to ' カテゴリー一覧', admins_categories_path %></li>

                    <li><%= link_to ' 会員一覧', admins_users_path %></li>

                    <li><%= link_to ' アレルギー一覧', admins_allergies_path %></li>

                    <li><%= link_to ' ジャンル', admins_genres_path %></li>

                    <li><a rel="nofollow" data-method="delete" href="/admins/sign_out">ログアウト</a></li>
                </ul>
            </nav>

      </header>

    <% elsif user_signed_in? %>

    <header class="navbar navbar-fixed-top">

          <nav>
              <ul class="nav navbar-nav navbar-right">

                  <li><%= link_to 'トップ', root_path, class: "btn btn-default" %></li>

                  <li><%= link_to 'マイページ', user_path(current_user), class: "btn btn-default" %></li>

                  <li><%= link_to ' 通知一覧', notifications_path, class: "btn btn-default" %></li>

                  <li><%= link_to 'ブックマーク一覧', bookmarks_recipes_path, class: "btn btn-default" %></li>
                  <li><%= link_to 'レシピ投稿', new_recipe_path, class: "btn btn-default" %></li>
                  <li><%= link_to 'ユーザー一覧', users_path, class: "btn btn-default" %></li>

                  <li><a rel="nofollow" data-method="delete" href="/users/sign_out", class="btn btn-default">ログアウト</a></li>
              </ul>
          </nav>
    </header>

    <% else %>

    <header class="navbar navbar-fixed-top">

          <nav>
              <ul class="nav navbar-nav navbar-right">

                  <li><%= link_to'新規登録',new_user_registration_path %></li>

                  <li><a href="/users/sign_in", class="btn btn-default">ログイン</a></li>
              </ul>
          </nav>

    </header>
    <% end %>
    <%= yield %>
    <footer>
      <div class="footer-text">
        nhw,cfejav.
      </div>
    </footer>
  </body>
  <script>
 $('#star').raty({
   size: 36,
   starOff: "#{asset_path('star-off.png')}",
   starOn: "#{asset_path('star-on.png')}",
   starHalf: "#{asset_path('star-half.png')}",
   scoreName: 'review[rate]', # reviewカラムに保存するので忘れないように
   half: true, # ★の半分の入力を行う
 });
  </script> 
</html>
