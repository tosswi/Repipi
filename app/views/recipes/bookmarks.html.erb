<div class="container">
  <h1>ブックマーク一覧</h1>
  <div class="row">
    <div class="col-xs-2">
      <%= render 'recipes/search', genre: @genres,category: @categories %>
    </div>
    <div class="col-xs-10">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>レシピ名</th>
            <th>詳細を見る</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.name %></td>
          </tr>
          <th>
          <td><%= link_to recipe.name,recipe_path(recipe) %></td>
          </th>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>