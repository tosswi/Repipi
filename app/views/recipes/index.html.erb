<div class="container">
  <h2>レシピ一覧</h2>
  (全<%=@recipes_all.count%>件） (<%=@recipes.count%>件)
  <div class="row">
    <div class="col-xs-2">
      <%= render 'recipes/search', genre: @genres,category: @categories %>
    </div>
    <div class="col-xs-10">
      <div class="table-responsive">
        <div class="flex_test-box">
          <% @recipes.each do |recipe|%>
          <%= link_to recipe_path(recipe) do %>
          <%= image_tag recipe.recipe_images[0].recipe_image.to_s, class:"recipe_showimage_search" %><br>
          <p><%= recipe.name %></p>
          <% end %>
          </tr>
          <% end %>
        </div>
      </div>
      <div class='p-top__paginate'>
        <%= paginate @recipes %>
      </div>
      <div class="table-responsive">
        <ul class="bxslider">
          <% @recipes_all.each do |recipe| %>
          <li>
            <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.recipe_images[0].recipe_image.to_s, class:"recipe_showimage" %>
            <% end %>
          </li>
          <% end %>
        </ul>
        <h3 class="recipe-rank">人気ランキング TOP3位</h3>
        <div class="flex_test-box">
          <% @recipes_bookmark.each do |recipe| %>
          <li>
            <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.recipe_images[0].recipe_image.to_s, class:"recipe_showimage_search1" %>
            <% end %>
          </li>
          <% end %>
        </div>
      </div>
    </div>
  </div>