<div class="container">
 <h2>レシピ一覧</h2>
 <div class="row">
  <div class="col-xs-2">
      <table class="table table-borderless">
        <table>
          <thead>
            <tr>
              <th>レシピ名</th>
            </tr>
          </thead>
          <tbody>
            </table>
        <% @recipes.each do |recipe|%>
            <tr>
              <%= link_to recipe_path(recipe) do %>
              <td><%= recipe.name %></td>
              <td><%= attachment_image_tag recipe, :image, size: '200x200',format: "jpeg" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </table>
</div>
